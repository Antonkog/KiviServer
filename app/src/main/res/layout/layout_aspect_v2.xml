<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/back_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/flm_height"
        android:layout_alignParentBottom="true"
        android:background="@color/back_view_background" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_inputs"
        android:layout_width="@dimen/inputs_container_width"
        android:layout_height="@dimen/inputs_container_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:translationY="@dimen/inputs_container_translation_y"
        android:translationZ="@dimen/inputs_container_translation_z"
        app:cardBackgroundColor="@color/cv_inputs_background"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_elevation"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        tools:translationY="-250dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_inputs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:itemCount="7"
            tools:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:listitem="@layout/item_aspect_input"
            tools:orientation="horizontal" />


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_keyboard"
        android:layout_width="180dp"
        android:layout_height="205dp"
        android:layout_marginEnd="32dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_keypad_r3"
        android:gravity="center"
        android:orientation="vertical"
        android:translationY="320dp"
        tools:translationY="0dp"
        tools:translationZ="10dp">

        <TextView
            android:id="@+id/tv_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:textColor="#ffffff"
            android:textSize="35sp"
            tools:text="466" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_numeric_sym_1"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/selector_key_numeric"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:nextFocusLeft="@id/tv_numeric_sym_1"
                    android:nextFocusUp="@id/tv_numeric_sym_1"
                    android:nextFocusRight="@id/tv_numeric_sym_2"
                    android:nextFocusDown="@id/tv_numeric_sym_4"
                    android:text="1"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_numeric_sym_2"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/selector_key_numeric"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:nextFocusUp="@id/tv_numeric_sym_2"
                    android:nextFocusLeft="@id/tv_numeric_sym_1"
                    android:nextFocusRight="@id/tv_numeric_sym_3"
                    android:nextFocusDown="@id/tv_numeric_sym_5"
                    android:text="2"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_numeric_sym_3"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:background="@drawable/selector_key_numeric"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:nextFocusRight="@id/tv_numeric_sym_3"
                    android:nextFocusUp="@id/tv_numeric_sym_3"
                    android:nextFocusLeft="@id/tv_numeric_sym_2"
                    android:nextFocusDown="@id/tv_numeric_sym_6"
                    android:text="3"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_numeric_sym_4"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/selector_key_numeric"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:nextFocusLeft="@id/tv_numeric_sym_4"
                    android:nextFocusUp="@id/tv_numeric_sym_1"
                    android:nextFocusRight="@id/tv_numeric_sym_5"
                    android:nextFocusDown="@id/tv_numeric_sym_7"
                    android:text="4"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_numeric_sym_5"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/selector_key_numeric"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:nextFocusLeft="@id/tv_numeric_sym_4"
                    android:nextFocusUp="@id/tv_numeric_sym_2"
                    android:nextFocusRight="@id/tv_numeric_sym_6"
                    android:nextFocusDown="@id/tv_numeric_sym_8"
                    android:text="5"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_numeric_sym_6"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:background="@drawable/selector_key_numeric"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:nextFocusRight="@id/tv_numeric_sym_6"
                    android:nextFocusLeft="@id/tv_numeric_sym_5"
                    android:nextFocusUp="@id/tv_numeric_sym_3"
                    android:nextFocusDown="@id/tv_numeric_sym_9"
                    android:text="6"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_numeric_sym_7"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/selector_key_numeric"
                    android:clickable="true"
                    android:focusable="true"
                    android:nextFocusUp="@id/tv_numeric_sym_4"
                    android:nextFocusRight="@id/tv_numeric_sym_8"
                    android:nextFocusDown="@id/fl_keyboard_erase"
                    android:gravity="center"
                    android:nextFocusLeft="@id/tv_numeric_sym_7"
                    android:text="7"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_numeric_sym_8"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/selector_key_numeric"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:nextFocusLeft="@id/tv_numeric_sym_7"
                    android:nextFocusUp="@id/tv_numeric_sym_5"
                    android:nextFocusRight="@id/tv_numeric_sym_9"
                    android:nextFocusDown="@id/tv_numeric_sym_0"
                    android:text="8"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_numeric_sym_9"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:background="@drawable/selector_key_numeric"
                    android:clickable="true"
                    android:nextFocusLeft="@id/tv_numeric_sym_8"
                    android:nextFocusUp="@id/tv_numeric_sym_6"
                    android:nextFocusDown="@id/fl_keyboard_confirm"
                    android:focusable="true"
                    android:gravity="center"
                    android:nextFocusRight="@id/tv_numeric_sym_9"
                    android:text="9"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/fl_keyboard_erase"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/selector_key_numeric"
                    android:clickable="true"
                    android:focusable="true"
                    android:nextFocusLeft="@id/fl_keyboard_erase"
                    android:nextFocusDown="@id/fl_keyboard_erase"
                    android:nextFocusUp="@id/tv_numeric_sym_7"
                    android:nextFocusRight="@id/tv_numeric_sym_0">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_backspace_icon" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_numeric_sym_0"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/selector_key_numeric"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:nextFocusDown="@id/tv_numeric_sym_0"
                    android:nextFocusLeft="@id/fl_keyboard_erase"
                    android:nextFocusUp="@id/tv_numeric_sym_8"
                    android:nextFocusRight="@id/fl_keyboard_confirm"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <FrameLayout
                    android:id="@+id/fl_keyboard_confirm"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:background="@drawable/selector_key_numeric"
                    android:clickable="true"
                    android:focusable="true"
                    android:nextFocusRight="@id/fl_keyboard_confirm"
                    android:nextFocusDown="@id/fl_keyboard_confirm"
                    android:nextFocusLeft="@id/tv_numeric_sym_0"
                    android:nextFocusUp="@id/tv_numeric_sym_9">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_check_black_24dp" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondary_menu"
        android:layout_width="@dimen/secondary_menu_width"
        android:layout_height="@dimen/secondary_menu_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/secondary_menu_padding_start"
        android:translationY="@dimen/secondary_menu_translation_y"
        android:translationZ="@dimen/secondary_menu_translation_z"
        tools:background="@android:color/holo_green_dark"
        tools:listitem="@layout/item_aspect_settings"
        tools:translationY="-250dp"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/iv_arrow_left"
            android:layout_width="@dimen/arrow_size"
            android:layout_height="@dimen/arrow_size"
            android:src="@drawable/ic_arrow_left" />

        <NumberPicker
            android:id="@+id/text_picker"
            android:layout_width="@dimen/text_picker_width"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/text_picker_margin_start"
            android:layout_marginEnd="@dimen/text_picker_margin_end"
            android:focusable="true"
            android:theme="@style/AppTheme.Picker" />

        <TextView
            android:id="@+id/tv_sound_balance_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/tv_sound_balance_title_left_margin_end"
            android:text="@string/sound_balance_title_left"
            android:textColor="@color/boulder"
            android:textSize="@dimen/sound_balance_title_text_size"
            android:visibility="gone"
            tools:visibility="visible" />

        <FrameLayout
            android:layout_width="@dimen/progress_settings_width"
            android:layout_height="@dimen/progress_settings_height">

            <ProgressBar
                android:id="@+id/pb"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/progress_settings_width"
                android:layout_height="@dimen/progress_settings_bar_height"
                android:layout_gravity="center"
                android:max="100"
                android:progressDrawable="@drawable/gradient_progress"
                tools:progress="60" />

            <ImageView
                android:id="@+id/iv_progress_temperature"
                android:layout_width="@dimen/progress_settings_width"
                android:layout_height="@dimen/progress_settings_bar_height"
                android:layout_gravity="center"
                android:src="@drawable/ic_temperature_bar"
                android:visibility="gone"
                tools:visibility="visible" />

            <View
                android:id="@+id/view_temperature_selector"
                android:layout_width="@dimen/selector_width"
                android:layout_height="@dimen/selector_height"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:visibility="gone"
                tools:translationX="-78dp"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv_progress_sound_balance"
                android:layout_width="@dimen/progress_settings_width"
                android:layout_height="@dimen/progress_settings_bar_height"
                android:layout_gravity="center"
                android:src="@drawable/ic_sound_balance_bar"
                android:visibility="gone"
                tools:visibility="visible" />

            <View
                android:id="@+id/view_sound_balance_selector"
                android:layout_width="@dimen/selector_width"
                android:layout_height="@dimen/selector_height"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:visibility="gone"
                tools:translationX="-78dp"
                tools:visibility="visible" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_sound_balance_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sound_balance_title_right_margin_start"
            android:text="@string/sound_balance_title_right"
            android:textColor="@color/boulder"
            android:textSize="@dimen/sound_balance_title_text_size"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/iv_arrow_right"
            android:layout_width="@dimen/arrow_size"
            android:layout_height="@dimen/arrow_size"
            android:layout_marginStart="@dimen/iv_arrow_right_margin_start"
            android:src="@drawable/ic_arrow_right" />

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tv_value_margin_start"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tv_value_text_size"
            tools:text="10" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:padding="@dimen/main_menu_padding"
        android:translationY="@dimen/main_menu_translation_y"
        tools:itemCount="5"
        tools:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:listitem="@layout/menu_item"
        tools:translationY="0dp" />

</RelativeLayout>