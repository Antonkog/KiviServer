<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/back_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/flm_height"
        android:layout_alignParentBottom="true"
        android:background="@color/back_view_background" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_inputs"
        android:layout_width="@dimen/inputs_container_width"
        android:layout_height="@dimen/inputs_container_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:translationY="@dimen/inputs_container_translation_y"
        android:translationZ="@dimen/inputs_container_translation_z"
        app:cardBackgroundColor="@color/cv_inputs_background"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_elevation"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        tools:translationY="-250dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_inputs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:itemCount="7"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_aspect_input"
            tools:orientation="horizontal" />

    </androidx.cardview.widget.CardView>

    <include layout="@layout/aspect_keypad"/>

    <include layout="@layout/aspect_secondary_menu" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:padding="@dimen/main_menu_padding"
        android:translationY="@dimen/main_menu_translation_y"
        tools:itemCount="5"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/menu_item"
        tools:translationY="0dp" />

</RelativeLayout>