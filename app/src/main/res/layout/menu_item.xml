<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="#777">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="@dimen/card_size"
        android:layout_height="@dimen/card_size"
        android:layout_below="@+id/actions_view"
        android:layout_margin="@dimen/card_margin"
        android:focusable="true"
        android:nextFocusUp="@id/card"
        android:nextFocusDown="@id/card"
        app:cardBackgroundColor="#333333"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_elevation"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/card_image_size"
                android:layout_height="@dimen/card_image_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/card_image_size_margin_top"
                android:scaleType="fitCenter"
                tools:src="@drawable/ic_screen_orientation_icon" />

            <TextView
                android:id="@+id/mainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/card_main_text_margin"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:textColor="#FFF"
                android:textSize="@dimen/card_main_text_size"
                android:textStyle="normal"
                tools:text="Звук" />

            <TextView
                android:id="@+id/secondText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:textColor="#9FFF"
                android:textSize="@dimen/card_second_text_size"
                android:textStyle="normal"
                tools:text="Музыка" />

            <com.wezom.kiviremoteserver.ui.views.pageindicatorview.PageIndicatorView
                android:id="@+id/progressIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/card_progress_indicator_padding_start"
                android:paddingTop="@dimen/card_progress_indicator_padding_top"
                android:paddingEnd="@dimen/card_progress_indicator_padding_end"
                android:paddingBottom="@dimen/card_progress_indicator_padding_bottom"
                app:piv_animationType="scale"
                app:piv_dynamicCount="true"
                app:piv_interactiveAnimation="true"
                app:piv_padding="@dimen/card_progress_indicator_piv_padding"
                app:piv_radius="@dimen/card_progress_indicator_piv_radius"
                app:piv_selectedColor="#0f6bfb"
                app:piv_unselectedColor="#ffffff" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/actions_view"
        android:layout_width="@dimen/card_action_view_width"
        android:layout_height="@dimen/card_action_view_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/card_action_view_margin"
        android:scaleType="fitXY"
        android:src="@drawable/ic_shape"
        android:visibility="invisible"
        tools:visibility="visible" />

</RelativeLayout>