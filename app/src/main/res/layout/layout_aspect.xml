<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/body_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/header_container"
        android:layout_alignLeft="@+id/header_container"
        android:layout_alignRight="@id/header_container"
        android:layout_marginBottom="15dp"
        android:background="#AA142429"
        android:elevation="1dp"
        android:orientation="vertical"
        android:translationZ="1dp" />

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:background="#344449"
        android:elevation="1dp"
        android:orientation="horizontal"
        android:translationZ="1dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/header_container"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@id/header_container"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="#88344449"
        android:elevation="1dp"
        android:gravity="center"
        android:lines="1"
        android:orientation="horizontal"
        android:padding="5dp"
        android:textColor="#bbccc5"
        android:textSize="30sp"
        android:translationZ="1dp" />
</RelativeLayout>